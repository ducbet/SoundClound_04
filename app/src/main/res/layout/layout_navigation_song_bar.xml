<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/colorWaveform"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linear_layout_waveform"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_view_track_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingTop="@dimen/dp_5"
            android:text="@string/track_info"
            android:textColor="@android:color/black"
            android:textSize="@dimen/track_info_text_size"
            android:textStyle="bold|italic"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/waveform_height"
            android:layout_margin="1dp"
            android:paddingLeft="@dimen/waveform_margin"
            android:paddingRight="@dimen/waveform_margin"
            android:visibility="visible">

            <ProgressBar
                android:id="@+id/progress_bar"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray"
                android:progressDrawable="@drawable/custom_progressbar"
                />

            <SeekBar
                android:id="@+id/seek_bar_waveform"
                style="@style/HomeSeekbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
        </RelativeLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/navigation_button_height">

        <RelativeLayout
            android:id="@+id/relative_layout_small_waveform"
            android:layout_width="0dp"
            android:layout_height="@dimen/waveform_height"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@android:color/darker_gray"
            android:visibility="visible">

            <ProgressBar
                android:id="@+id/progress_bar_small"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:progressDrawable="@drawable/custom_progressbar"
                />

            <ImageView
                android:id="@+id/image_view_waveform_small"
                style="@style/HomeSeekbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                />
        </RelativeLayout>

        <ImageView
            android:id="@+id/image_view_play"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorAccent"
            android:src="@drawable/ic_play_arrow_white_24px"/>

        <ImageView
            android:id="@+id/image_view_previous"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FF9800"
            android:src="@drawable/ic_skip_previous_white_24px"/>

        <ImageView
            android:id="@+id/image_view_next"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FF9800"
            android:src="@drawable/ic_skip_next_white_24px"/>

    </LinearLayout>

</LinearLayout>
