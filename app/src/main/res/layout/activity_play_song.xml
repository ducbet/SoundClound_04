<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tuquyet.soundcloud.ui.activity.PlaySongActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_view_artwork"
            android:layout_width="match_parent"
            android:layout_height="@dimen/artwork_video"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_5"
            android:gravity="center"
            android:orientation="horizontal">

            <com.tuquyet.soundcloud.data.model.SquareImageView
                android:id="@+id/image_view_favorite"
                android:layout_width="0dp"
                android:layout_height="@dimen/track_status_height"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:src="@drawable/ic_favorite_gray_24px"/>

            <TextView
                android:id="@+id/text_view_favorite_count"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <com.tuquyet.soundcloud.data.model.SquareImageView
                android:id="@+id/image_view_comment"
                android:layout_width="0dp"
                android:layout_height="@dimen/track_status_height"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:src="@drawable/ic_mode_comment_gray_24px"/>

            <TextView
                android:id="@+id/text_view_comment_count"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <com.tuquyet.soundcloud.data.model.SquareImageView
                android:id="@+id/image_view_download"
                android:layout_width="0dp"
                android:layout_height="@dimen/track_status_height"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:src="@drawable/ic_file_download_gray_24px"/>

            <TextView
                android:id="@+id/text_view_download_count"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view_comment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@android:color/holo_orange_light"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@android:color/white"/>

        <com.tuquyet.soundcloud.data.model.NavigationSongBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <!--<include layout="@layout/fab_layout"/>-->
</android.support.design.widget.CoordinatorLayout>

