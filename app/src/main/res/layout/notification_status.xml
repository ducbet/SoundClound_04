<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="@dimen/notification_height"
              android:orientation="horizontal">

    <ImageView
        android:id="@+id/image_view_notifi_track_avatar"
        android:layout_width="@dimen/notification_height"
        android:layout_height="@dimen/notification_height"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_view_notifi_track_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_20"
            android:gravity="center"
            android:text="@string/track_info"
            android:textColor="@android:color/black"
            android:textSize="@dimen/sp_15"
            />

        <ProgressBar
            android:id="@+id/progress_bar_notifi"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_3"
            android:progressDrawable="@drawable/bg_progressbar"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/image_view_notifi_previous"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/color_orange_500"
                android:src="@drawable/ic_skip_previous_white_24px"/>

            <ImageView
                android:id="@+id/image_view_notifi_play_pause"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorAccent"
                android:src="@drawable/ic_pause_white_24px"/>

            <ImageView
                android:id="@+id/image_view_notifi_next"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/color_orange_500"
                android:src="@drawable/ic_skip_next_white_24px"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
